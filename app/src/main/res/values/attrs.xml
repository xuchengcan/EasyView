<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BubbleLayout">
        <attr name="bl_arrowWidth" format="dimension|reference" />
        <attr name="bl_cornersRadius" format="dimension|reference" />
        <attr name="bl_arrowHeight" format="dimension|reference" />
        <attr name="bl_arrowPosition" format="dimension|reference" />
        <attr name="bl_bubbleColor" format="color|reference" />
        <attr name="bl_strokeWidth" format="dimension|reference" />
        <attr name="bl_strokeColor" format="color|reference" />
        <attr name="bl_arrowDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <!--百分比布局-->
    <declare-styleable name="PercentLayout_Layout">
        <attr name="layout_widthPercent" format="string" />
        <attr name="layout_heightPercent" format="string" />
        <attr name="layout_marginPercent" format="string" />
        <attr name="layout_marginLeftPercent" format="string" />
        <attr name="layout_marginTopPercent" format="string" />
        <attr name="layout_marginRightPercent" format="string" />
        <attr name="layout_marginBottomPercent" format="string" />
        <attr name="layout_marginStartPercent" format="string" />
        <attr name="layout_marginEndPercent" format="string" />
        <attr name="layout_textSizePercent" format="string" />
        <attr name="layout_maxWidthPercent" format="string" />
        <attr name="layout_maxHeightPercent" format="string" />
        <attr name="layout_minWidthPercent" format="string" />
        <attr name="layout_minHeightPercent" format="string" />
        <attr name="layout_paddingPercent" format="string" />
        <attr name="layout_paddingTopPercent" format="string" />
        <attr name="layout_paddingBottomPercent" format="string" />
        <attr name="layout_paddingLeftPercent" format="string" />
        <attr name="layout_paddingRightPercent" format="string" />
    </declare-styleable>

    <!-- RTextView -->
    <declare-styleable name="RTextView">

        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" format="dimension" />
        <attr name="border_dash_gap" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width_normal" format="dimension" />
        <attr name="border_width_pressed" format="dimension" />
        <attr name="border_width_unable" format="dimension" />

        <!--边框颜色-->
        <attr name="border_color_normal" format="color" />
        <attr name="border_color_pressed" format="color" />
        <attr name="border_color_unable" format="color" />

        <!--背景颜色-->
        <attr name="background_normal" format="color" />
        <attr name="background_pressed" format="color" />
        <attr name="background_unable" format="color" />

        <!--文本颜色-->
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_pressed" format="color" />
        <attr name="text_color_unable" format="color" />

        <!--图标资源-->
        <attr name="icon_src_normal" format="reference" />
        <attr name="icon_src_pressed" format="reference" />
        <attr name="icon_src_unable" format="reference" />

        <!--图标、大小、位置-->
        <attr name="icon_height" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <!--字体样式-->
        <attr name="text_typeface" format="string" />

    </declare-styleable>

</resources>