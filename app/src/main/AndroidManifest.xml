<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="chen.easyview">

    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- WIFI网络状态信息权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- 写入扩展存储，向扩展卡写入数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- SD卡读取权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <!-- 设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <!-- 读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 修改全局声音 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <!-- 关闭硬件加速android:hardwareAccelerated="false" -->
    <application
        android:name=".base.BaseApplication2"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <!--"@style/AppTheme"-->
        <!--"@style/AppThemeNoActionBar"-->

        <meta-data
            android:name="TINKER_ID"
            android:value="2.0"/>

        <activity android:name=".base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".activity.ShowActivity"/>
        <activity android:name=".activity.CanvasActivity"/>
        <activity android:name=".activity.PathActivity">
        </activity>
        <activity android:name=".activity.TestViewActivity">
        </activity>
        <activity android:name=".activity.TinkerActivity">
        </activity>
        <activity android:name=".activity.BubbleActivity">
        </activity>
        <activity android:name=".activity.NoteActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="https"/>
                <data android:scheme="http"/>
                <data android:mimeType="*/*"/>

            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaiduTtsActivity">


        </activity>
    </application>

</manifest>