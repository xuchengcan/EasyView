<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="chen.easyview">

    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 写入扩展存储，向扩展卡写入数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- SD卡读取权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <!-- 关闭硬件加速android:hardwareAccelerated="false" -->
    <application
        android:name=".base.BaseApplication2"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="TINKER_ID" android:value="2.0"/>
        <activity android:name=".base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ShowActivity"/>
        <activity android:name=".activity.CanvasActivity"/>
        <activity android:name=".activity.PathActivity">
        </activity>
        <activity android:name=".activity.TestViewActivity">
        </activity>
        <activity android:name=".activity.TinkerActivity">
        </activity>
        <activity android:name=".activity.BubbleActivity">
        </activity>
    </application>

</manifest>