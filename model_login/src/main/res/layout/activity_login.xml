<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/xy_logo"
        tools:ignore="ContentDescription"/>

    <!-- 输入手机号 -->
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/iv_phone_label"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            tools:ignore="ContentDescription"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/iv_phone_label"
            android:background="@null"
            android:text="15913901399"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_clear_phone"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/iv_phone_label"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            tools:ignore="ContentDescription"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8"/>
    </RelativeLayout>

    <!-- 输入密码 -->
    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_code_label"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            tools:ignore="ContentDescription"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/iv_code_label"
            android:background="@null"
            android:text="123456"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_display_password"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            tools:ignore="ContentDescription"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#D8D8D8"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:textSize="17sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#FB0628"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#FB0628"
            android:textSize="13sp"
            tools:ignore="RelativeOverlap"/>
    </RelativeLayout>

</LinearLayout>
